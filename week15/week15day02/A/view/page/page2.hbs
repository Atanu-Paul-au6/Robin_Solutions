<section id="data_table" class="container">
  <h3>All the Posts</h3>
  <table class="table table-dark table-borderless table-hover table-sm">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Post ID</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Body</th>
      </tr>
    </thead>
    {{#each data}}
    <tbody>
      <tr>
        <th scope="row">{{id}}</th>
        <td>{{postId}}</td>
        <td>{{name}}</td>
        <td>{{email}}</td>
        <td>{{body}}</td>
      </tr>
    </tbody>
    {{/each}}
  </table>
</section>